<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.GameController">
    <children>
        <ImageView fitHeight="768.0" fitWidth="1024.0" layoutX="0" layoutY="0" preserveRatio="false">
         <image>
            <Image url="@../img/playMode.png" />
         </image>
        </ImageView>
        <Button fx:id="replayBtn" layoutX="51.0" layoutY="624.0" mnemonicParsing="false" onAction="#replayGame" prefHeight="47.0" prefWidth="193.0" text="Replay" />
        <Button fx:id="finishBtn" layoutX="51.0" layoutY="697.0" mnemonicParsing="false" onAction="#closeGame" prefHeight="47.0" prefWidth="193.0" text="Finish" />
      <Button fx:id="rollDiceBtn" layoutX="62.0" layoutY="309.0" mnemonicParsing="false" onAction="#rollDice" prefHeight="28.0" prefWidth="135.0" text="Roll Dice" />
      <Label fx:id="labelDice1" layoutX="200.0" layoutY="302.0" prefHeight="15.0" prefWidth="89.0" text="Dice 1:" textFill="#f8f7f7" />
      <Label fx:id="labelDice2" layoutX="200.0" layoutY="330.0" prefHeight="15.0" prefWidth="96.0" text="Dice 2:" textFill="WHITE" />
      <Button fx:id="chanceBtn" layoutX="487.0" layoutY="172.0" mnemonicParsing="false" onAction="#takeCard" opacity="0.0" prefHeight="83.0" prefWidth="160.0" rotate="-46.0" text="Draw" />
      <Button fx:id="chestBtn" layoutX="704.0" layoutY="456.0" mnemonicParsing="false" onAction="#takeCard" opacity="0.0" prefHeight="74.0" prefWidth="162.0" rotate="-46.0" text="Draw" />
    </children>
</AnchorPane>
